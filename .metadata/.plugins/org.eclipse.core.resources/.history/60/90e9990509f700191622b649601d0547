$message = $('.customMessage');
$message.hide();

function showMessage(type, message){
	$message.attr("class", "alert alert-"+type +" customMessage").show().html(message);
}

var GlobalUtil = {	
	
	contextPath: $(document.body).attr("data-context-path"),
	test: "test",
	clearErrorField: function() { 
		var input = $('input');
    	input.val('');
    	input.next().remove();
	}
}
