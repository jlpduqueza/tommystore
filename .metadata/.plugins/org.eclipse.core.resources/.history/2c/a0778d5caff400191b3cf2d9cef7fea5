$(function() {

    $.get({

        url: contextPath + '/ajax/productlist',
        dataType: "json",
        success: function(res) {
            $.each(res, function(key, value) {
                $('.card-container').append(productCardTemplate(value));
            });
        },
        error: function(error) {
            console.log(error);
            alert("There's a problem in fetching products.");
        }

    });

});