$(function() {

    var contextPath = $(document.body).attr("data-context-path");

    $.get({

        url: contextPath + '/ajax/user',
        success: function(res) {
        	if (res.length == 0) {
                $('#userTable').hide();
                $('.tableEmptyMessage').show();
            } else {
                $.each(res, function(key, value) {
                    $('#userTable').append(userRow(value));
                });
            }
        },
        error: function(error) {
            console.log(error);
        }

    });

});