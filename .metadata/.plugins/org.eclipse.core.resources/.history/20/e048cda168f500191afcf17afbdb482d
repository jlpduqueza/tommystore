$(function() {

    $.get({

        url: contextPath + '/ajax/user',
        dataType: "json",
        success: function(res) {
        	if (res.length == 0) {
                $('#userTable').hide();
                $('.tableEmptyMessage').show();
            } else {
                $.each(res, function(key, value) {
                    $('#userTable').append(userRow(value));
                });
            }
        },
        error: function(error) {
        	alert("Problem fetching user list");
        }

    });

});