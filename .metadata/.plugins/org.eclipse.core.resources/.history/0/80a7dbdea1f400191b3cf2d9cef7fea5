$(function() {

    var contextPath = $(document.body).attr("data-context-path");

    $.get({

        url: contextPath + '/ajax/inventory-item',
        success: function(res) {
            if (res.length == 0) {
                $('#inventoryItemTable').hide();
                $('.tableEmptyMessage').show();
            } else {
                $.each(res, function(key, value) {
                    $('#inventoryItemTable').append(inventoryItemRow(value));
                });
            }
        },
        error: function(error) {
            console.log(error);
            alert("There's a problem fetching inventory.");
        }

    });

});